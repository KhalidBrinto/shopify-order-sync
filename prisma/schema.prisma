generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                 Int      @id @default(autoincrement())
  shopifyCustomerId  String   @unique
  firstName          String?
  lastName           String?
  email              String?  @unique
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  orders             Order[]
}

model Order {
  id              Int        @id @default(autoincrement())
  shopifyOrderId  String     @unique
  name            String?
  totalPrice      Decimal?   @db.Decimal(10, 2)
  currency        String?    @default("USD")
  orderStatus     String?    @default("pending")
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  customerId      Int
  customer        Customer   @relation(fields: [customerId], references: [id])
  lineItems       LineItem[]
  addresses       Address[]
}

model LineItem {
  id         Int     @id @default(autoincrement())
  orderId    Int
  title      String
  quantity   Int
  price      Decimal? @db.Decimal(10, 2)
  sku        String?
  productId  String?
  variantId  String?

  order      Order   @relation(fields: [orderId], references: [id])
}

model Address {
  id         Int     @id @default(autoincrement())
  orderId    Int
  type       AddressType
  firstName  String?
  lastName   String?
  address1   String?
  address2   String?
  city       String?
  province   String?
  zip        String?
  country    String?
  phone      String?

  order      Order   @relation(fields: [orderId], references: [id])
}

enum AddressType {
  shipping
  billing
}
